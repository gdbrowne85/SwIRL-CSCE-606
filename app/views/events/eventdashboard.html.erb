<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #000;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .title-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background-color: #333;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-title {
            font-size: 24px;
            font-weight: bold;
            letter-spacing: -1px;
        }

        .navbar-email {
            line-height: 40px;
            margin-left: 15px;
            text-align: end;
        }

        .event-card {
            background-color: #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 90%;
            margin-bottom: 15px;
            max-width: 700px;
        }

        .event-header {
            padding: 20px;
            background-color: #555;
            color: #fff;
            border-bottom: 1px solid #666;
            font-size: 1.5em;
            font-weight: bold;
            letter-spacing: 1px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .event-content {
            background-color: #555;
            color: #fff;
            display: none;
            padding: 50px;
        }

        .gradient-btn {
            background-color: #555;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .gradient-btn:hover {
            background-color: #666;
            cursor: pointer;
            transform: translateY(-2px);
        }

        .transparent-btn {
            background-color: transparent;
            border: none;
            color: #bbb;
        }

        .transparent-btn:hover {
            color: #fff;
        }

        .list-unstyled {
            padding-left: 0;
            list-style: none;
        }

        .attendee {
            margin-bottom: 10px;
        }

        .dashboard-header {
            padding-top: 80px;
            padding-bottom: 50px;
        }

        .status-awaiting-reply {
            color: #ffc107; /* Bootstrap yellow color for warning */
        }
        .status-attending {
            color: #28a745; /* Bootstrap green color for success */
        }
        .status-not-attending {
            color: #dc3545; /* Bootstrap red color for danger */
        }

        @media (max-width: 768px) {
            .event-card {
                width: 95%;
            }
        }
        
        /* Add Particle Orb styling */
        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            background-color: #000;
            z-index: -1; /* Ensure particles are behind content */
        }
    }
    </style>
</head>
<body>
    <!-- Particle Orb -->
    <div id="particles-js"></div>
    
    <!-- Navigation bar -->
    <nav class="title-bar">
        <div class="container d-flex align-items-center">
            <div class="navbar-title flex-grow-1">
                <span>A Place For All Your Events</span>
            </div>
            <div class="navbar-email">
                <%= session[:user_email] if session[:user_email] %> 
            </div>
            <% if session[:user_email] %>
            <form action="<%= logout_path %>" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <button type="submit" style="background-color: black; color: white; border: 2px solid white;">Logout</button>
            </form>
            <% end %>
        </div>
    </nav>

    <!-- Alert messages -->
    <% if flash[:notice].present? %>
    <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
    </div>
    <% elsif flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
    </div>
    <% end %>

    <!-- Event Dashboard -->
    <div class="event-dashboard">
        <div class="dashboard-header">
            <h1>Event Dashboard</h1>
            <%= link_to "Back to Home", home_path, class: "gradient-btn" %>
        </div>

        <!-- Events I'm Hosting -->
        <h2>Events I'm Hosting</h2>
        <ul>
            <% @events_im_hosting.each do |event| %>
                <li class="event-card">
                    <div class="event-header" onclick="toggleEventContent('<%= event.id %>')">
                        <h3><%= event.name %></h3>
                        <div class="event-actions">
                            <%= link_to edit_event_path(event), class: "btn transparent-btn" do %>
                                <i class="fas fa-pencil-alt"></i>
                            <% end %>
                            <%= button_to event, method: :delete, class: "btn transparent-btn", onclick: "return confirm('Are you sure?')" do %>
                                <i class="fas fa-trash-alt"></i>
                            <% end %>
                        </div>
                    </div>
                    <div id="event-content-<%= event.id %>" class="event-content">
                        <% if event.time_slots&.blank? %>
                        <h4>Single Event</h4>
                        <h4>Date: <%= event.event_info&.date&.strftime('%A, %d %b %Y') %></h4>
                        <% else %>
                        <h4>Speaker Series</h4>
                        <% end %>
                        <h4>Location: <%= event.event_info&.venue %></h4>
                        <h4>Yes/No Ratio: <span id="yes-count-<%= event.id %>">0</span> / <span id="no-count-<%= event.id %>">0</span></h4>
                        <% if event.time_slots&.blank? %>
                        <h4 class="event-col"><strong>Max Capacity:</strong> <%= event.event_info&.max_capacity %></h4>
                        <% end %>
                    <% if event.time_slots&.present? %>
                        <h4 class="event-col"><strong>Time Slots:</strong></h4>
                        <% event.time_slots&.each do |time_slot| %>
                            <h4 class="event-col">
                                <strong>Date:</strong>
                                <%= time_slot&.date %>

                                <strong>Start Time:</strong>
                                <%= time_slot&.start_time&.strftime("%I:%M %p") %>

                                <strong>End Time:</strong>
                                <%= time_slot&.end_time&.strftime("%I:%M %p") %>
                            </h4>
                        <% end %>
                    <% else %>
                        <h4 class="event-col">
                            <strong>Start Time:</strong>
                            <% if event.event_info&.start_time.present? %>
                                <%= event.event_info.start_time.strftime("%I:%M %p") %>
                            <% else %>
                                No data available.
                            <% end %>
                        </h4>
                        <h4 class="event-col">
                            <strong>End Time:</strong>
                            <% if event.event_info&.end_time.present? %>
                                <%= event.event_info.end_time.strftime("%I:%M %p") %>
                            <% else %>
                                No data available.
                            <% end %>
                        </h4>
                    <% end %>
                        
                        <h4>Attendees:</h4>
                            <ul class="list-unstyled">
                            <% event.attendee_infos.each do |attendee_info| %>
                            <li class="attendee">
                                <strong><%= attendee_info.name %></strong> - Email: <%= attendee_info.email %><br>
                                Status: <span class="<%= status_class(attendee_info.status) %>">
                                        <%= readable_status(attendee_info.status) %>
                                    </span><br>
                            </li>
                            <% end %>
                            </ul>
                        <%= button_to "Add to Google Calendar", create_event_path(event), method: :post, class: "gradient-btn", remote: true, data: { turbo: false } %>
                    </div>
                </li>
            <% end %>
        </ul>

        <!-- Events I'm Invited To -->
        <h2>Events I'm Invited To</h2>
        <ul>
            <% @events_im_invited_to.each do |event| %>
                <li class="event-card">
                    <%= link_to event_path(event), class: "stretch-link" do %>
                        <div class="event-header">
                            <h3><%= event.name %></h3>
                        </div>
                        <div class="event-content">
                            <h4>Date: <%= event.event_info&.date&.strftime('%A, %d %b %Y') %></h4>
                            <h4>Location: <%= event.event_info&.venue %></h4>
                        </div>
                    <% end %>
                </li>
            <% end %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 80,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": "#ffffff"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000000"
                    },
                    "polygon": {
                        "nb_sides": 5
                    },
                    "image": {
                        "src": "img/github.svg",
                        "width": 100,
                        "height": 100
                    }
                },
                "opacity": {
                    "value": 0.5,
                    "random": false,
                    "anim": {
                        "enable": false,
                        "speed": 1,
                        "opacity_min": 0.1,
                        "sync": false
                    }
                },
                "size": {
                    "value": 3,
                    "random": true,
                    "anim": {
                        "enable": false,
                        "speed": 40,
                        "size_min": 0.1,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#ffffff",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 6,
                    "direction": "none",
                    "random": false,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false,
                    "attract": {
                        "enable": false,
                        "rotateX": 600,
                        "rotateY": 1200
                    }
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "grab"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "grab": {
                        "distance": 200,
                        "line_linked": {
                            "opacity": 1
                        }
                    },
                    "bubble": {
                        "distance": 400,
                        "size": 40,
                        "duration": 2,
                        "opacity": 8,
                        "speed": 3
                    },
                    "repulse": {
                        "distance": 200,
                        "duration": 0.4
                    },
                    "push": {
                        "particles_nb": 4
                    },
                    "remove": {
                        "particles_nb": 2
                    }
                }
            },
            "retina_detect": true
        });
        console.log("Page fully rendered");
    </script>

    <script>
        function toggleEventContent(eventId) {
            var eventContent = document.getElementById("event-content-" + eventId);
            if (eventContent.style.display === "none" || eventContent.style.display === "") {
                eventContent.style.display = "block";
            } else {
                eventContent.style.display = "none";
            }
        }
    </script>
</body>
</html>
